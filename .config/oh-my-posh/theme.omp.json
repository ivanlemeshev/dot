{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#8ba37c",
          "options": {
            "alpine": "",
            "arch": "",
            "centos": "",
            "debian": "",
            "elementary": "",
            "fedora": "",
            "gentoo": "",
            "linux": "",
            "macos": "",
            "manjaro": "",
            "mint": "",
            "opensuse": "",
            "raspbian": "",
            "ubuntu": "",
            "windows": ""
          },
          "style": "plain",
          "template": " {{ .Icon }}<#8a8a81> | </>",
          "type": "os"
        },
        {
          "foreground": "#d1d1c7",
          "style": "plain",
          "template": "{{ if ne .Env.POSH_SESSION_DEFAULT_USER .UserName }}<#7da6b8>{{ .UserName }}</><#d1b37d>󰁥</></>{{ end }}<#87a3a1>{{ .HostName }}</><#8a8a81> | </>",
          "type": "session"
        },
        {
          "foreground": "#d1b37d",
          "style": "plain",
          "template": "󱐋<#8a8a81> | </>",
          "type": "root"
        },
        {
          "foreground": "#d1d1c7",
          "options": {
            "style": "full"
          },
          "style": "plain",
          "template": "{{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#d1b37d",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#d1b37d{{ end }}",
            "{{ if gt .Ahead 0 }}#87a3a1{{ end }}",
            "{{ if gt .Behind 0 }}#a993a8{{ end }}"
          ],
          "options": {
            "branch_icon": " ",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": "<#8a8a81>| </>{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}<#c9655e> 󰤌 {{ .Working.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#8ba37c>  {{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#8ba37c",
          "options": {
            "time_format": "15:04:05"
          },
          "style": "plain",
          "template": "  {{ .CurrentDate | date .Format }} ",
          "type": "time"
        },
        {
          "foreground": "#d1b37d",
          "options": {
            "style": "roundrock",
            "threshold": 500
          },
          "style": "plain",
          "template": "  {{ .FormattedMs }} </>",
          "type": "executiontime"
        },
        {
          "foreground": "#8ba37c",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#c9655e{{ end }}"
          ],
          "options": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "  {{ if gt .Code 0 }}{{ .Code }}{{ end }} ",
          "type": "status"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#d1d1c7",
          "style": "plain",
          "template": "$",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}}root :: {{end}}{{.Shell}} :: {{.Folder}}",
  "final_space": true,
  "version": 4
}
