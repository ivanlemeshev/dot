{
  "$help": "https://aka.ms/terminal-documentation",
  "$schema": "https://aka.ms/terminal-profiles-schema",
  "defaultProfile": "Windows PowerShell",
  "copyFormatting": "none",
  "copyOnSelect": false,

  "profiles": {
    "defaults": {
      "colorScheme": "Catppuccin Mocha",
      "cursorShape": "filledBox",
      "font": {
        "builtinGlyphs": true,
        "colorGlyphs": true,
        "face": "Hack Nerd Font Mono",
        "size": 12,
        "weight": "normal"
      },
      "intenseTextStyle": "bright",
      "opacity": 100,
      "useAcrylic": false
    },
    "list": [
      {
        "name": "Windows PowerShell",
        "icon": "‚ö°",
        "commandline": "%SystemRoot%\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
        "startingDirectory": "%USERPROFILE%",
        "hidden": false
      },
      {
        "name": "Command Prompt",
        "icon": "üêö",
        "commandline": "%SystemRoot%\\System32\\cmd.exe",
        "startingDirectory": "%USERPROFILE%",
        "hidden": false
      },
      {
        "name": "Ubuntu",
        "icon": "üêß",
        "commandline": "wsl.exe -d Ubuntu --cd ~",
        "hidden": false
      }
    ]
  },

  "schemes": [
    {
      "name": "Catppuccin Mocha",
      "background": "#1E1E2E",
      "black": "#45475A",
      "blue": "#89B4FA",
      "brightBlack": "#585B70",
      "brightBlue": "#89B4FA",
      "brightCyan": "#94E2D5",
      "brightGreen": "#A6E3A1",
      "brightPurple": "#F5C2E7",
      "brightRed": "#F38BA8",
      "brightWhite": "#A6ADC8",
      "brightYellow": "#F9E2AF",
      "cursorColor": "#F5E0DC",
      "cyan": "#94E2D5",
      "foreground": "#CDD6F4",
      "green": "#A6E3A1",
      "purple": "#F5C2E7",
      "red": "#F38BA8",
      "selectionBackground": "#585B70",
      "white": "#BAC2DE",
      "yellow": "#F9E2AF"
    }
  ],

  "actions": [
    { "id": "User.copy", "command": { "action": "copy", "singleLine": false } },
    { "id": "User.paste", "command": "paste" },
    { "id": "User.find", "command": "find" },
    {
      "id": "User.splitPane",
      "command": {
        "action": "splitPane",
        "split": "auto",
        "splitMode": "duplicate"
      }
    }
  ],

  "keybindings": [
    { "id": "User.copy", "keys": "ctrl+c" },
    { "id": "User.paste", "keys": "ctrl+v" },
    { "id": "User.find", "keys": "ctrl+shift+f" },
    { "id": "User.splitPane", "keys": "alt+shift+d" }
  ],

  "themes": [
    {
      "name": "Catppuccin Mocha",
      "tab": {
        "background": "#1E1E2EFF",
        "showCloseButton": "always"
      },
      "tabRow": {
        "background": "#181825FF",
        "unfocusedBackground": "#11111BFF"
      },
      "window": {
        "applicationTheme": "dark",
        "useMica": false
      }
    }
  ]
}
