{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#d8a657",
          "options": {
            "time_format": "15:04"
          },
          "style": "plain",
          "template": "[{{ .CurrentDate | date .Format }}]",
          "type": "time"
        },
        {
          "type": "shell",
          "style": "plain",
          "foreground": "#ea6962",
          "options": {
            "mapped_shell_names": {
              "pwsh": "Shell",
              "powershell": "Shell",
              "cmd": "Cmd",
              "bash": "Bash"
            }
          },
          "template": " \ue795 {{ .Name }}"
        },
        {
          "foreground": "#d8a657",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#e78a4e{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ea6962{{ end }}",
            "{{ if gt .Ahead 0 }}#d3869b{{ end }}",
            "{{ if gt .Behind 0 }}#d3869b{{ end }}"
          ],
          "options": {
            "branch_template": "{{ trunc 25 .Branch }}",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground": "#a9b665",
          "foreground_templates": ["{{ if gt .Code 0 }}#ea6962{{ end }}"],
          "template": " x{{ reason .Code }}"
        },
        {
          "foreground": "#a9b665",
          "foreground_templates": ["{{ if gt .Code 0 }}#ea6962{{ end }}"],
          "options": {
            "style": "roundrock",
            "always_enabled": true
          },
          "style": "diamond",
          "template": " {{ .FormattedMs }} ",
          "type": "executiontime"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#7daea3",
          "options": {
            "style": "full"
          },
          "style": "plain",
          "template": "\ue5ff {{ .Path }}",
          "type": "path"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#ea6962",
          "style": "plain",
          "template": "\u0021",
          "type": "root"
        },
        {
          "foreground": "#ea6962",
          "style": "plain",
          "template": "\u276f",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 4
}
