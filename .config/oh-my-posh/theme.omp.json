{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#90a959",
          "options": {
            "alpine": "",
            "arch": "",
            "centos": "",
            "debian": "",
            "elementary": "",
            "fedora": "",
            "gentoo": "",
            "linux": "",
            "macos": "",
            "manjaro": "",
            "mint": "",
            "opensuse": "",
            "raspbian": "",
            "ubuntu": "",
            "windows": ""
          },
          "style": "plain",
          "template": " {{ .Icon }}<#505050> | </>",
          "type": "os"
        },
        {
          "foreground": "#d0d0d0",
          "style": "plain",
          "template": "{{ if ne .Env.POSH_SESSION_DEFAULT_USER .UserName }}<#6a9fb5>{{ .UserName }}</><#f4bf75>󰁥</></>{{ end }}<#75b5aa>{{ .HostName }}</><#505050> | </>",
          "type": "session"
        },
        {
          "foreground": "#f4bf75",
          "style": "plain",
          "template": "󱐋<#505050> | </>",
          "type": "root"
        },
        {
          "foreground": "#d0d0d0",
          "options": {
            "style": "full"
          },
          "style": "plain",
          "template": "{{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#f4bf75",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#f4bf75{{ end }}",
            "{{ if gt .Ahead 0 }}#75b5aa{{ end }}",
            "{{ if gt .Behind 0 }}#aa759f{{ end }}"
          ],
          "options": {
            "branch_icon": " ",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": "<#505050>| </>{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}<#ac4142> 󰤌 {{ .Working.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#90a959>  {{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#90a959",
          "options": {
            "time_format": "15:04:05"
          },
          "style": "plain",
          "template": "  {{ .CurrentDate | date .Format }} ",
          "type": "time"
        },
        {
          "foreground": "#f4bf75",
          "options": {
            "style": "roundrock",
            "threshold": 500
          },
          "style": "plain",
          "template": "  {{ .FormattedMs }} </>",
          "type": "executiontime"
        },
        {
          "foreground": "#90a959",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ac4142{{ end }}"
          ],
          "options": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "  {{ if gt .Code 0 }}{{ .Code }}{{ end }} ",
          "type": "status"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#d0d0d0",
          "style": "plain",
          "template": "$",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}}root :: {{end}}{{.Shell}} :: {{.Folder}}",
  "final_space": true,
  "version": 4
}
